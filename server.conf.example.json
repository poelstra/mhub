{
	"listen": [
		{
			"type": "websocket",
			"port": 13900
		},
		{
			"type": "tcp",
			"port": 13902
		}
	],
	"logging": "info",
	"nodes": {
		"default": "HeaderStore",
		"state": {
			"type": "TopicStore",
			"options": {
				"persistent": true
			}
		},
		"ping": "PingResponder",
		"heartbeat": {
			"type": "TestSource",
			"options": {
				"topic": "heartbeat",
				"interval": 5000
			}
		},
		"test": {
			"type": "Queue",
			"options": {
				"capacity": 5,
				"pattern": ["test:*", "blib"],
				"persistent": true
			}
		}
	},
	"bindings": [{ "from": "blib", "to": "test" }],
	"storage": "./storage/"
}
