{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-parameter-properties": true,
    "indent": [
      true,
      "tabs"
    ],
    "interface-name": [
      false
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "object-literal-sort-keys": [
      false
    ],
    "no-angle-bracket-type-assertion": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-preblock",
      "check-separator",
      "check-type"
    ],
    "max-classes-per-file": false,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
