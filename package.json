{
  "name": "mhub",
  "version": "0.2.0",
  "description": "Simple, flexible message hub using websockets",
  "main": "./dist/src/index.js",
  "bin": {
    "mclient": "./bin/mclient",
    "mping": "./bin/mping",
    "mserver": "./bin/mserver"
  },
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha -R spec dist/test/",
    "start": "node ./mserver",
    "lint": "node support/tslint_wrapper.js src/*.ts test/*.ts",
    "build:src": "node support/deglob.js tsc @tsc.options.txt --outDir dist/src/ src/*.ts",
    "watch:src": "node support/deglob.js tsc @tsc.options.txt --outDir dist/src/ src/*.ts --watch",
    "build:test": "node support/deglob.js tsc @tsc.options.txt --outDir dist/test/ test/*.ts",
    "watch:test": "node support/deglob.js tsc @tsc.options.txt --outDir dist/test/ test/*.ts --watch",
    "build": "npm run build:src && npm run build:test",
    "watch:start": "mkdir -p dist/src/ && touch dist/src/server.js && nodemon --delay 1 --watch dist/src/",
    "watch": "parallelshell 'npm run watch:src' 'npm run watch:test' 'npm run watch:start'",
    "clean": "rimraf -rf dist",
    "prepublish": "npm run lint && npm run build && npm run test"
  },
  "author": "Martin Poelstra <martin@beryllium.net>",
  "license": "MIT",
  "devDependencies": {
    "cross-spawn": "^0.2.9",
    "glob": "^5.0.5",
    "mocha": "^2.2.4",
    "multi-glob": "^0.4.0",
    "parallelshell": "^1.1.1",
    "tslint": "^2.1.1",
    "typescript": "^1.5.0-alpha"
  },
  "dependencies": {
    "express": "^4.12.3",
    "minimatch": "^2.0.4",
    "node-uuid": "^1.4.3",
    "ws": "^0.7.1",
    "yargs": "^1.3.3"
  },
  "tslintConfig": "tslint.json"
}
